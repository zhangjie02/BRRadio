<resources>

   <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

   <!-- Application theme. -->
    
    <!--<style name="AppTheme" parent="@style/Theme.Sherlock">-->
    <style name="AppTheme">

    	<item name="actionBarStyle">@style/ActionBar</item>
    	<item name="android:actionBarTabStyle">@style/ActionBar</item>
    	
    	<item name="android:actionBarTabBarStyle">@style/ActionBar.TabBar</item>
   		<item name="actionBarTabBarStyle">@style/ActionBar.TabBar</item>
    	
    	<item name="actionBarDivider">@null</item>
  	
    </style>
 
	<style name="ActionBar" parent="Widget.Sherlock.ActionBar"> 
		
	</style>
	
	<style name="ActionBar.TabBar" parent="Widget.Sherlock.ActionBar.TabBar">
    	<item name="android:showDividers">none</item>
	</style>
 
</resources>